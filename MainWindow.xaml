<Window x:Class="SatelliteLocDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SatelliteLocDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name ="ErrorTextBlock" Text="{Binding ErrorText}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,10,0,0" Visibility="Collapsed"/>
        <TextBlock Text="{Binding Text1}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0"/>
        <TextBlock Text="{Binding Text2}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,200,0,0"/>
        <Button Content="This button does not work." HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Button_Click"/>
        <Button Content="Next Language" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="LanguageButton_Click"/>
    </Grid>
</Window>
